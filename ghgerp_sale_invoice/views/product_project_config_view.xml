<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="product_project_config_tree" model="ir.ui.view">
        <field name="name">product.project.config.view.tree</field>
        <field name="model">product.project.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name="income_account_id"/>
                <field name="expense_account_id"/>
            </tree>
        </field>
    </record>
    <record id="product_project_config_view_form" model="ir.ui.view">
        <field name="name">product.project.config.view.form</field>
        <field name="model">product.project.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="income_account_id"/>
                            <field name="expense_account_id"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
</odoo>
